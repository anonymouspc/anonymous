{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug.clear",
            "hide": true,
            "type": "shell",
            "windows": {
                "command": "rm bin/debug/main.o bin/debug/main.exe 2>nul || exit /b 0"
            },
            "osx": {
                "command": "rm bin/debug/main.o bin/debug/main 2>&- || :"
            }
        },
        {
            "label": "debug.compile",
            "group": "none",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "g++ -std=c++26 -g -Wall -O0 -Ddebug=1 -c main.cpp -o bin/debug/main.o 2>&1 | tee bin/debug/log.txt",
            },
            "osx": {
                "command": "clang++ -std=c++26 -g -Wall -O0 -Ddebug=1 -c main.cpp -o bin/debug/main.o 2>&1 | tee bin/debug/log.txt",
                "options": {
                    "env": {
                        "CPLUS_INCLUDE_PATH": "/opt/homebrew/include"
                    }
                }
            }
        },
        {
            "label": "debug.link",
            "group": "none",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "g++ -o bin/debug/main.exe -fuse-ld=lld bin/debug/main.o bin/dll/main.dll -lstdc++exp -ladvapi32 -lbcrypt -lboost_charconv-mt -lboost_date_time-mt -lboost_filesystem-mt -lboost_iostreams-mt -lboost_locale-mt -lboost_process-mt -lboost_stacktrace_basic-mt -lclblast -lcrypto -lFLAC -ljpeg -lkernel32 -lmpg123 -lmswsock -lntdll -lOpenCL -lpng -lshell32 -lssl -ltbb12 -ltiff -luser32 -lws2_32",
            },
            "osx": {
                "command": "clang++ -o bin/debug/main -fuse-ld=lld bin/debug/main.o bin/dll/main.dylib -lboost_charconv -lboost_date_time -lboost_filesystem -lboost_iostreams -lboost_locale -lboost_process -lboost_stacktrace_basic -lboost_system -lclblast -lcrypto -lFLAC -ljpeg -lmpg123 -lpng -lssl -ltbb -ltiff -framework OpenCL",
                "options": {
                    "env": {
                        "LIBRARY_PATH": "/opt/homebrew/lib"
                    }
                }   
            }
        },
        {
            "label": "debug.run",
            "detail": "debug.run",
            "group": "test",
            "type": "shell",
            "windows": { 
                "command": "start cmd /c \"\"bin/debug/main.exe\" & pause\""
            },
            "osx": {
                "command": "bin/debug/main"
            }
        },
        {
            "label": "debug",
            "detail": "debug",
            "group": "build",
            "type": "shell",
            "dependsOn": ["debug.clear", "debug.compile", "debug.link"],
